<% include ../partials/header%>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a New Trail</h1>
    <div style="width: 30%; margin: 25px auto;">
<form action="/trails" method="POST">
  <div class="form-group">
  <label>Name of Nature Preserve Park</label>
  <input class="form-control" type="text" name="name">
  </div>
  <div class="form-group">
  <label>Price</label>
  <input class="form-control" type="number" name="price" min="0.01"step="0.01">
  </div>
  <div class="form-group">
    <label>Place your image</label>
        <input class="form-control" type="text" name="image">
    </div>
    <div class="form-group">
    <label>Place your description</label>
        <input class="form-control" type="text" name="description">
    </div>
          <button class="btn btn-primary">Submit</button>
      </form>
        <a href="/trails">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer%>
