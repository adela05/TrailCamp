<% include ../partials/header%>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit <%= trail.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
<form action="/trails/<%= trail._id %>?_method=PUT" method="POST">
  <div class="form-group">
  <label>Name of Nature Preserve Park</label>
  <input class="form-control" type="text" name="trail[name]" value="<%= trail.name %>">
  </div>
  <div class="form-group">
  <label>Price</label>
  <input class="form-control" type="number" name="trail[price]" value="<%= trail.price %>" min="0.01"step="0.01">
  </div>
  <div class="form-group">
    <label>Place your image</label>
        <input class="form-control" type="text" name="trail[image]" value="<%= trail.image %>">
    </div>
    <div class="form-group">
    <label>Place your description</label>
        <input class="form-control" type="text" name="trail[description]" value="<%= trail.description %>">
    </div>
          <button class="btn btn-primary">Update</button>
      </form>
        <a href="/trails">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer%>
